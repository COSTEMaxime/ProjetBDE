{% extends "base.html.twig" %}
{% block navbar %}
<!-- Menu -->
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
        <li class="">
            <a href="/" >Accueil</a>
        </li>
        <li class="">
            <a href="/ideas">Boîte à idée</a>
        </li>
        <li class="">
            <a href="/events">Evènements</a>
        </li>
        <li class="active">
            <a href="/shop">Boutique</a>
        </li>
    </ul>
    {% endblock %}
{% block body %}
    {% if app.session.get('logged') is not null %}
    <div class="modal-content">
        <div class="modal-body">
            <div class="col-xs-40">

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">
                               Produits & Catégories <!--small>Statistics Overview</small-->
                            </h1>
                            <!-- Formulaire d'ajout de produit -->
                            <li class="dropdown">
                                <a href="http://www.jquery2dotnet.com" class="dropdown-toggle" data-toggle="dropdown">Ajouter un produit<b class="caret"></b></a>
                                <ul class="dropdown-menu" style="padding: 15px;min-width: 250px;">
                                    <li>
                                        <div class="col-md-20">
                                            <form class="form" role="form" method="post" action="login" accept-charset="UTF-8"
                                                  id="login-nav">
                                                <div class="form-group">
                                                    <label for="exampleFormControlSelect1">Dans quelle catégorie ?</label>
                                                    <select class="form-control" id="exampleFormControlSelect1">
                                                        <option>Catégorie 1</option>
                                                        <option>Catégorie 2</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Nom du produit</label>
                                                    <input type="text" class="form-control" id="prod" aria-describedby="emailHelp">
                                                </div>
                                                <div class="form-group">
                                                    <label for="exampleFormControlTextarea1">Description du produit</label>
                                                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                                </div>
                                                <div class="form-group">
                                                    <label for="pricelab" class = "control-label">Prix</label>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" name="prix" id = "pricelab"/>
                                                        <span class="input-group-addon">€</span>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="row">
                                                        <input type='file' onchange="readURL(this);" name = "img"/>
                                                    </div>
                                                </div>
                                                <button type="button" class="btn btn-success">Ajouter le produit</button>
                                            </form>
                                        </div>
                                    </li>
                                </ul>
                            </li>

                            <!-- Menu // Il faut y mettre toute les catégories -->
                            <ul id="myTab" class="nav nav-tabs">
                                <li><a href="#a" data-toggle="tab">Catégorie 1</a></li>
                                <li><a href="#b" data-toggle="tab">Catégorie 2</a></li>
                            </ul>

                            <!-- Catégories + Produits [MENU] -->
                            <div id="myTabContent" class="tab-content">
                                <div class="tab-pane fade" id="a">
                                    <div class="content_accordion">
                                        <div class="panel-group" id="ga">

                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    <h4 class="panel-title">
                                                        <a data-toggle="collapse" data-parent="#ga" href="#a1">Produit 1</a>
                                                    </h4>
                                                </div>
                                                <div id="a1" class="panel-collapse collapse">
                                                    <div class="panel-body">
                                                        Description du produit 1
                                                        <button type="button" class="btn btn-warning">Modifier</button>
                                                        <button type="button" class="btn btn-danger">Supprimer</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    <h4 class="panel-title">
                                                        <a data-toggle="collapse" data-parent="#ga" href="#a2">Produit 2</a>
                                                    </h4>
                                                </div>
                                                <div id="a2" class="panel-collapse collapse">
                                                    <div class="panel-body">
                                                        Description du produit 2
                                                        <button type="button" class="btn btn-warning">Modifier</button>
                                                        <button type="button" class="btn btn-danger">Supprimer</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Catégories + Produits [MENU] 2 -->
                                    </div>
                                    <div class="tab-pane fade" id="b">
                                        <div class="content_accordion">
                                            <div class="panel-group" id="gb">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        <h4 class="panel-title">
                                                            <a data-toggle="collapse" data-parent="#gb" href="#b1">Produit 1</a>
                                                        </h4>
                                                    </div>
                                                    <div id="b1" class="panel-collapse collapse">
                                                        <div class="panel-body">
                                                            Description du produit 1
                                                            <button type="button" class="btn btn-warning">Modifier</button>
                                                            <button type="button" class="btn btn-danger">Supprimer</button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        <h4 class="panel-title">
                                                            <a data-toggle="collapse" data-parent="#gb" href="#b2">Produit 2</a>
                                                        </h4>
                                                    </div>
                                                    <div id="b2" class="panel-collapse collapse">
                                                        <div class="panel-body">
                                                            Description du produit 2
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <!--end-->
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->


                    <br/>
                    <!-- Ajouter une catégorie -->
                    <form class="form-inline">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Nouvelle catégorie :</label>
                            <input type="text" class="form-control" id="text" placeholder="Nom Catégorie">
                        </div>
                        <button type="submit" class="btn btn-primary mb-2">Ajouter</button>
                    </form>
                    <br/>
                    <!-- Supprimer une catégorie -->
                    <form class="form-inline">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Supprimer une catégorie :</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>Catégorie 1</option>
                                <option>Catégorie 2</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-danger mb-2">Supprimer</button>
                    </form>

            </div>
        </div>
    </div>
        {% endif %}
{% endblock %}