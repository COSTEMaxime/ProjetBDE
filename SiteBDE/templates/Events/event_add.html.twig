{% extends "base.html.twig" %}

{% block body %}

{% if app.session.get('logged') is not null %}
    <p>Ajouter un évènement</p>
    {% form_theme form 'bootstrap_4_layout.html.twig' %} <!-- Utiliser bootstrap -->
    <div id="login-overlay" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="col-xs-15">
                    <div class="well">
                        {{ form_start(form) }}
                            {{ form_errors(form) }}
                            <div class="form-group">
                                <b>Tître : </b>
                                {{ form_errors(form.titre) }}
                                {{ form_widget(form.titre) }}
                            </div>
                            <div class="form-group">
                                <b>Description : </b>
                                {{ form_errors(form.description) }}
                                {{ form_widget(form.description) }}
                            </div>
                            <div class="container">
                                <img id="blah" src="http://placehold.it/180" alt="your image" />
                                <div class="row">
                                    <b>Image : </b>
                                    {{ form_errors(form.image) }}
                                    {{ form_widget(form.image) }}
                                </div>
                            </div>
                            <br/>
                            <div class="form-group">
                                <!--<input id="datepicker" width="270" name = "date" placeholder="Date"/>-->
                                <b>Date : </b>
                                {{ form_errors(form.date) }}
                                {{ form_widget(form.date) }}
                                <script>
                                    $('#datepicker').datepicker({
                                        uiLibrary: 'bootstrap'
                                    });
                                </script>
                            </div>
                            <div class="form-group">
                                <b>Récurence : </b>
                                {{ form_errors(form.recurrence) }}
                                {{ form_widget(form.recurrence) }}
                            </div>
                            <div class="form-group">
                                <label for="pricelab" class = "control-label">Prix</label>
                                    <div class="input-group">
                                        {{ form_errors(form.price) }}
                                        {{ form_widget(form.price) }}
                                        <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}
